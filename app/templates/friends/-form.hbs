<form {{action "save" on="submit"}}>
  <h2>{{errorMessage}}</h2>
  <fieldset>
    {{input value=model.firstName placeholder='First Name'}}<br><br>
    {{input value=model.lastName placeholder='Last Name'}}<br><br>
    {{input value=model.email placeholder='Email'}}<br><br>
    {{input value=model.twitter placeholder='Twitter'}}<br><br>
    <input type="submit" value="Save" class='primary'>
    <button {{action "cancel"}}>Cancel</button>
  </fieldset>
</form>
