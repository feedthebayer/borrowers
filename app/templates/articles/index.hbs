<h2>Article Index</h2>
<table class='primary'>
  <thead>
    <tr>
      <th>Description</th>
      <th>Notes</th>
      <th>Borrowed Since</th>
      <th {{action 'toggleShowReturned'}} class='clickable'>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each filteredArticles as |article|}}
      {{articles/article-row
        article=article
        save="save"
        articleStates=possibleStates
      }}
    {{/each}}
  </tbody>
</table>
